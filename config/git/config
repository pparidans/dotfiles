[user]
    name = Pierre Paridans
    email = pierre@paridans.org
[alias]
    st = status
    br = branch --verbose
    co = checkout
    ll = log --abbrev-commit --graph --decorate --pretty=oneline
    cur = branch --show-current
    di = diff --ignore-all-space
    dic = diff --ignore-all-space --cached
    cp = cherry-pick
    fa = fetch --all
    puf = push --force-with-lease
    branch-gone = ! LANG=C git branch --verbose --verbose | awk '/: gone]/{print $1}'
[column]
    ui = auto
[core]
    editor = nvim
[color]
    ui = auto
[branch]
    sort = -committerdate
[tag]
    sort = version:refname
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[rebase]
    instructionFormat = (%an) %s
    autostash = true
[commit]
    verbose = true
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[pull]
    ff = only
    rebase = true
[status]
    showUntrackedFiles = all
[fetch]
    prune = true
    pruneTags = true
    all = true
